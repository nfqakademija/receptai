{% extends 'base.html.twig' %}
{% import "/macros/macros.html.twig" as macros %}

{% block body %}

    <main class="container">
    <div id="meal-plan" class="meal-plan-app">
        <div>
            <div id="meal-plan-header" class="pad-small">
                <h1>
                    <span id="meal-plan-title">{{ 'user_created.myRecipes'|trans }}</span>
                </h1>
            </div><!-- meal-plan-header -->

            <div id="meal-plan-content" class="clearfix">
                <div id="meals" class="pad-small">
                    {% if recipes is defined and recipes|length > 0 %}
                        {% for recipe in recipes %}
                            {{ macros.cardWithEdit(
                                recipe.imageUrl,
                                recipe.title,
                                recipe.id)
                            }}
                        {% endfor %}
                    {% else %}
                        <h3>{{ 'user_created.noRecipes'|trans }}</h3>
                        <br>
                        <a href="{{ path('new_recipe') }}" class="next-plan-mine">{{ 'user_created.addNew'|trans }}</a>
                    {% endif %}
                </div>
            </div>
        </div>
        <div >
            {% if recipes is defined %}
                {{ knp_pagination_render(recipes) }}
            {% endif %}
        </div>
    </div>
{% endblock %}