{% extends 'base.html.twig' %}
{% import "/macros/macros.html.twig" as macros %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        <div>
            <h1> {{ 'generated_recipe.generatedRecipes'|trans }} </h1>
            <ul>


                {% if selectedRecipes is defined %}
                    {% for selectedRecipe in selectedRecipes %}
                        {{ macros.card(
                            selectedRecipe.imageUrl,
                            selectedRecipe.title,
                            selectedRecipe.id) }}
                    {% endfor %}
                {% endif %}


                {% if summedRecipes is defined %}
                    {% for summedRecipe in summedRecipes %}
                        {{ macros.ingredient(
                            summedRecipe.0.ingredient.title,
                            summedRecipe.total ~ summedRecipe.0.measure.title
                        )  }}
                    {% endfor %}
                {% endif %}

            </ul>
        </div>
    </div>
{% endblock %}
