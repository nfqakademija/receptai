{% extends 'base.html.twig' %}
{% import "/macros/macros.html.twig" as macros %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="container">
        <div class="row">
            <h1>{{ 'generated_recipe.tags'|trans }}</h1>
        </div>

        {{ form_start(form) }}

        {{ form_row(form.title) }}

        <button type="submit" class="btn btn-success">{{ 'generated_recipe.submit'|trans }}</button>

        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
<div class="example-wrapper">

    <div>
        <h3> Produce </h3>
        <ul>

            {% if tags is defined %}
                {% for tag in tags %}
                    {{ macros.tags(
                        tag.title
                    )  }}
                {% endfor %}
            {% endif %}

        </ul>
    </div>
    This friendly message is coming from:
    <ul>

    </ul>
</div>
{% endblock %}
