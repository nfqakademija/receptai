{% extends 'base.html.twig' %}

{% block title %}{{ 'registration_form.register_title'|trans }}{% endblock %}

{% block body %}
    {{ form_start(registrationForm) }}

    <body class="authentication">
    <!--[if lt IE 9]>

    <div class="browser-upgrade">You are using an <strong>outdated</strong> browser. Please <a
            href="http://browsehappy.com/">upgrade your browser</a>
        to improve your experience.
    </div>
    <![endif]-->
    <div id="authentication">
        <div id="auth-header">
        </div>
        <div id="auth-well">
            <div id="auth-well-header">

            </div>
            <div id="auth-well-content">
                <div id="signup">
                    <h1>
                        {{ 'registration_form.create'|trans }}</h1>
                    <input name="utf8" type="hidden" value="âœ“">

                    <div class="form-group first-name">
                        <label for="registration_first_name">
                            {{ 'registration_form.whatFirstName'|trans }}</label>
                        {# form_label(registrationForm.username) #}
                        {{ form_widget(registrationForm.username) }}
                    </div>


                    <div class="form-group">
                        <label for="registration_email">
                            {{ 'registration_form.enterEmail'|trans }}</label>
                        <div>
                            {# form_label(registrationForm.email) #}
                            {{ form_widget(registrationForm.email) }}
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="registration_password">
                            {{ 'registration_form.createPassword'|trans }}</label>
                        {# form_label(registrationForm.password) #}
                        {{ form_widget(registrationForm.password) }}
                    </div>


                    <div class="terms-body">
                        {{ 'registration_form.receive'|trans }}
                    </div>
                </div>
                <input type="submit" name="commit" value="{{ 'registration_form.register_button'|trans }}"
                       class="ml-btn-strong-cta disable-on-click">
            </div>
        </div>
    </div>
    <div id="auth-footer">

    </div>
    </body>

    {{ form_end(registrationForm) }}
{% endblock %}

