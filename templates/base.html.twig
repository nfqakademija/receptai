<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>{% block title %}{{ 'base.title'|trans }}{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {{ encore_entry_link_tags('login') }}
    {% endblock %}
</head>
<body>

{% block header %}
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="{{ path('home') }}">{{ 'base.home'|trans }}</a>
                <div class="collapse navbar-collapse">
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('random_recipe') }}">{{ 'base.random_recipe'|trans }}</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('profile') }}">
                                {{ 'base.user'|trans }} <b>{{ app.user.email }}</b>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('easyadmin') }}">{{ 'base.admin'|trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">{{ 'base.logout'|trans }}</a>
                        </li>
                    {% else %}

                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('login') }}">{{ 'base.login'|trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('registration') }}">{{ 'base.register'|trans }}</a>
                        </li>

                    {% endif %}

                </div>
            </div>
        </nav>
    </header>
{% endblock %}
{% block flash_messages %}
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">{% trans %}Close{% endtrans %}</span></button>
                {{ message | raw }}
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}


{% block body %} {% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>