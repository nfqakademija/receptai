{% extends 'base.html.twig' %}

{% block title %}{{ "home_page.home"|trans }}{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="mb-3">
            {{ "home_page.logged_in_as"|trans }} {{ app.user.username }}, <a href="{{ path('app_logout') }}">{{ "home_page.logout"|trans }}</a>
        </div>
    {% endif %}
    <div>
        <h1>{{ "home_page.recipes"|trans }}</h1>
        <p class="lead">{{ "home_page.text"|trans }}</p>
        <ul>
            {% for recipe in recipes %}
                <li>
                    <div>
                        {{ recipe.title }}
                        {{ recipe.description }}
                        <ul>
                            {% for post in posts %}
                                {% if recipe.title == post.recipe.title %}
                                    <li>
                                        {{ post.ingredient.title }}
                                        {{ post.amount }}
                                        {{ post.measure.title }}
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>
                </li>
            {% endfor %}
    </div>

{% endblock %}